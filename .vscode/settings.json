{
    "editor.renderWhitespace": "boundary",
    "files.encoding": "utf8",
    "files.eol": "\r\n",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.snippetSuggestions": "bottom",
    "[csharp]": {
        //Disable space indentation for C# as Tabs are the primary indentation
        //in the existing code base.
        "editor.insertSpaces": false
    },
    "files.associations": {
        "*.csproj": "msbuild",
        "*.props": "msbuild",
        "*.targets": "msbuild"
    },
    "[msbuild]": {
        "editor.tabSize": 2
    },
    "omnisharp.defaultLaunchSolution": "../Ceras.sln"
}